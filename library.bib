arxivId = {2101.04802},
author = {Clerckx, Bruno and Mao, Yijie and Schober, Robert and Jorswieck, Eduard and Love, David J. and Yuan, Jinhong and Hanzo, Lajos and Li, Geoffrey Ye and Larsson, Erik G. and Caire, Giuseppe},
eprint = {2101.04802},
journal = {arXiv preprint arXiv:2101.04802},
pages = {1--26},
title = {Is NOMA Efficient in Multi-Antenna Networks? A Critical Look at Next Generation Multiple Access Techniques},
year = {2021}
}
