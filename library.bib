doi = {10.1109/TCOMM.2017.2772261},
issn = {0090-6778},
journal = {IEEE Transactions on Communications},
keywords = {Ambient backscatter communication (AmBC),Multi-antenna systems,Orthogonal frequency division multiplexing (OFDM),Performance analysis,Spread spectrum,Transceiver design},
