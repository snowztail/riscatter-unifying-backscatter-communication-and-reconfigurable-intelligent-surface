@article{Zhang2021c,
abstract = {This letter studies a symbiotic radio network (SRN) with multiple backscatter devices (BDs) coexisting with a primary receiver. A hybrid peer-assisted non-orthogonal-multiple-access (NOMA)-plus-dynamic-time-division-multiple-access (TDMA) scheme is proposed. Under this scheme, BDs are categorized into different clusters, and only one cluster is allowed to transmit in each time slot. Within each cluster, NOMA is adopted. The latter cluster can harvest energy from previous clusters using peer assistance. We maximize the minimum throughput among all BDs by jointly optimizing the BS{\&}{\#}x2019;s power allocation, BDs{\&}{\#}x2019; power reflection coefficients and the time allocation under practical constraints. Particularly, a practical energy causality constraint is considered, and the effect of imperfect successive interference cancellation (SIC) of NOMA is also studied. Numerical results show that the peer-assisted NOMA-plus-TDMA scheme achieves satisfactory throughput gain over conventional schemes. It is also shown that peer assistance does help in terms of improving the system throughput and fairness.},
author = {Zhang, Ronghaixiang and Kang, Xin and Liang, Ying-Chang},
doi = {10.1109/LWC.2021.3083841},
issn = {2162-2337},
journal = {IEEE Wireless Communications Letters},
keywords = {Backscatter,Backscatter communication,Energy harvesting,NOMA,Resource management,Silicon carbide,Symbiosis,Throughput,energy causality.,non-orthogonal multiple access,peer-assisted,symbiotic radio,throughput maximization},
number = {c},
pages = {1--1},
title = {Minimum Throughput Maximization for Peer-assisted NOMA-plus-TDMA Symbiotic Radio Networks},
volume = {2337},
year = {2021}
}
@inproceedings{Kim2019,
abstract = {We build a realistic Simultaneous Wireless Information and Power Transfer (SWIPT) prototype and experimentally analyse the harvested energy and throughput trade-off. Both time-switching and power splitting receiver architectures are implemented, and the performance comparison is carried out. Systematic SWIPT transmission signal design methods are also considered and implemented on the prototype. The harvested energy-throughput (E-T) performance with different transmission signal designs, modulation schemes, and receiver architectures are evaluated and compared. The combination of the power splitting receiver architecture and the superposition transmission signal design technique shows significant expansion of the E-T region. The experimental results fully validate the observations predicted from the theoretical signal designs and confirm the benefits of systematic signal designs on the system performance. The observations give important insights on how to design a practical SWIPT system.},
author = {Kim, Junghoon and Clerckx, Bruno and Mitcheson, Paul D.},
booktitle = {2019 IEEE Wireless Power Transfer Conference (WPTC)},
doi = {10.1109/WPTC45513.2019.9055639},
isbn = {978-1-7281-0705-9},
month = jun,
pages = {1--5},
publisher = {IEEE},
title = {Experimental Analysis of Harvested Energy and Throughput Trade-off in a Realistic SWIPT System},
year = {2019}
}
@article{Ye2018,
abstract = {Owing to the superior performance in spectral efficiency, connectivity, and flexibility, nonorthogonal multiple access (NOMA) is recognized as the promising access protocol and is now undergoing the standardization process in 5G. Specifically, dozens of NOMA schemes have been proposed and discussed as the candidate multiple access technologies for the future radio access networks. This paper aims to make a comprehensive overview about the promising NOMA schemes. First of all, we analyze the state-of-the-art NOMA schemes by comparing the operations applied at the transmitter. Typical multiuser detection algorithms corresponding to these NOMA schemes are then introduced. Next, we focus on grant-free NOMA, which incorporates the NOMA techniques with uplink uncoordinated access and is expected to address the massive connectivity requirement of 5G. We present the motivation of applying grant-free NOMA, as well as the typical grant-free NOMA schemes and the detection techniques. In addition, this paper discusses the implementation issues of NOMA for practical deployment. Finally, we envision the future research challenges deduced from the recently proposed NOMA technologies.},
