issn = {1536-1276},
journal = {IEEE Transactions on Wireless Communications},
keywords = {Channel estimation,Intelligent reflecting surface (IRS),Linear minimum mean-squared error (LMMSE) estimato,Massive multipleinput multiple-output (MIMO),Multiuser communications},
month = oct,
number = {10},
pages = {6607--6620},
title = {Channel Estimation for Intelligent Reflecting Surface Assisted Multiuser Communications: Framework, Algorithms, and Analysis},
volume = {19},
year = {2020}
}
