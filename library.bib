keywords = {Intelligent reflecting surface,joint active and passive beamforming,phase shift optimization},
month = dec,
number = {11},
pages = {1--6},
publisher = {IEEE},
title = {Intelligent Reflecting Surface Enhanced Wireless Network: Joint Active and Passive Beamforming Design},
volume = {18},
year = {2018}
